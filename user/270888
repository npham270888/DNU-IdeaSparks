    <script>
        // Toggle login modal
        const loginBtn = document.getElementById('login-btn');
        const registerBtn = document.getElementById('register-btn');
        const loginModal = document.getElementById('login-modal');
        const closeLoginModal = document.getElementById('close-login-modal');

        loginBtn.addEventListener('click', () => {
            loginModal.classList.remove('hidden');
        });

        registerBtn.addEventListener('click', () => {
            // In a real implementation, this would redirect to register page
            alert('Chuyển hướng đến trang đăng ký');
        });

        closeLoginModal.addEventListener('click', () => {
            loginModal.classList.add('hidden');
        });

        // Close modal when clicking outside
        loginModal.addEventListener('click', (e) => {
            if (e.target === loginModal) {
                loginModal.classList.add('hidden');
            }
        });

        // Handle idea submission button
        document.querySelectorAll('.btn-primary').forEach(button => {
            button.addEventListener('click', () => {
                // In a real implementation, check if user is logged in
                // If not logged in, show login modal
                loginModal.classList.remove('hidden');
            });
        });

        // Handle vote buttons (show login if not authenticated)
        document.querySelectorAll('.vote-button').forEach(button => {
            button.addEventListener('click', () => {
                // In a real implementation, check if user is logged in
                // If not logged in, show login modal
                loginModal.classList.remove('hidden');
            });
        });

        // Filter buttons
        document.querySelectorAll('.category-badge').forEach(button => {
            button.addEventListener('click', (e) => {
                e.preventDefault();
                // In a real implementation, this would filter ideas
                alert('Lọc ý tưởng theo danh mục: ' + button.textContent.trim());
            });
        });

        // Search functionality
        const searchInput = document.querySelector('input[type="text"]');
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                // In a real implementation, this would search ideas
                alert('Tìm kiếm ý tưởng với từ khóa: ' + searchInput.value);
            }
        });
    </script>
